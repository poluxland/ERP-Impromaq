

<%= simple_form_for(@hora) do |f| %>


<div class="form-inputs offset-md-1">

  <div class="row">
    <div class="col-md-3 mb-3 ">
      <%= f.input :ot %>
    </div>

    <% if current_user.superadmin_role? || current_user.supervisor_role? %>
    <div class="col-md-3 mb-3 ">
      <%= f.input :estado, collection: [ "Pendiente revisión", "Aprobada", "Rechazada"]%>
    </div>
    <% else %>
    <div class="col-md-3 mb-3 ">
      <%= f.input :estado, collection: [ "Pendiente revisión" ] %>
    </div>
    <% end %>
    <div class="col-md-3 mb-3">
      <%= f.input :he, label: 'Total Horas extraordinarias' %>
    </div>

  </div>

  <div class="row">
    <div class="col-md-3 mb-3">
      <%= f.input :fecha,order: [:day, :month, :year] %>
    </div>
    <div class="col-md-3 mb-3">
      <%= f.input :inicio %>
    </div>
    <div class="col-md-3 mb-3">
      <%= f.input :termino %>
    </div>



  </div>

  <div class="row">
    <div class="col-md-3 mb-3">
      <%= f.input :area, collection: ["Servicios", "Inspector", "Mecánica", "Operador","Eléctrico", "Estructura", "Encarpado", "Operador",
 "1 T Haver", "1 T Bigbag", "1 T Horquilla"] %>
    </div>
    <div class="col-md-3 mb-3">
      <%= f.input :traslado %>
    </div>
    <div class="col-md-3 mb-3">
      <%= f.input :lugar, collection: ["Trapen", "Calbuco", "Otro"] %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-9 mb-9">
      <%= f.input :personal %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9 mb-9">
      <%= f.input :descripcion, as: :text %>
    </div>
    </div>
    <div class="row">
      <div class="col-md-5 mb-5 ">
        <%= f.input :mandante, label: 'ITO', collection: ["Martin Llancafil", "Cesar Hernandez", "Sergio Miranda", "Johnny Rute", "Daniel Garrido"] %>
      </div>
      <div class="col-md-4 mb-4 ">
        <%= f.input :ep, label: 'Estado de pago', collection: ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"] %>
      </div>

    </div>




<div class="form-actions">
  <%= f.button :submit, "Agregar a registro", class: "btn-primary", label: 'Total' %>
</div>
<% end %>
