
<%= simple_form_for(@overtime) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :inicio %>
    <%= f.input :termino %>
    <%= f.association :personal, label_method: :nombre, collection: Personal.order('nombre ASC'), label: 'Nombre' %>
    <%= f.input :cantidad %>
    <%= f.input :motivo %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
