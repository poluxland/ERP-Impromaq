
<%= simple_form_for(@equipo) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">

  <div class="col-md-4 mb-4 justify-center">

    
    <%= f.association :truck, label_method: :codigo, collection: Truck.order('codigo ASC'), label: 'Equipo' %>
    <%= f.input :operador %>
    <%= f.input :horometro %>
    <%= f.input :c17, collection: [ "LCA", "PTM", "VTS", "PAM", "Otros"], label: 'Planta' %>
    <%= f.input :c1, collection: [ "Si", "No(leve)", "No(grave)", "No aplica"], label: 'Equipo libre de fugas' %>
    <%= f.input :c2, collection: [ "Si", "No(leve)", "No(grave)", "No aplica"], label: 'Equipo libre de pernos sueltos o quebraduras' %>
    <%= f.input :c3, collection: [ "Si", "No(leve)", "No(grave)", "No aplica"], label: 'Responden todos los movimientos' %>
    <%= f.input :c4, collection: [ "Si", "No(leve)", "No(grave)", "No aplica"], label: 'Funcionan correctamente los frenos' %>
    <%= f.input :c5, collection: [ "Si", "No(leve)", "No(grave)", "No aplica"], label: 'Se encuentran en buen estado los pasadores' %>
    <%= f.input :c6, collection: [ "Si", "No(leve)", "No(grave)", "No aplica"], label: 'Todos los espejos estan operativos' %>
    <%= f.input :c7, collection: [ "Si", "No(leve)", "No(grave)", "No aplica"], label: 'Cinturon de seguridad operativo' %>
    <%= f.input :c8, collection: [ "Si", "No(leve)", "No(grave)", "No aplica"], label: 'Neumaticos en buen estado' %>
    <%= f.input :c9, collection: [ "Si", "No(leve)", "No(grave)", "No aplica"], label: 'Funciona alarma de retroseso' %>
    <%= f.input :c10, collection: [ "Si", "No(leve)", "No(grave)", "No aplica"], label: 'Funciona bocina' %>
    <%= f.input :c11, collection: [ "Si", "No(leve)", "No(grave)", "No aplica"], label: 'Funcionan luces' %>
    <%= f.input :c12, collection: [ "Si", "No(leve)", "No(grave)", "No aplica"], label: 'Equipo se encuentra libre de alarmas' %>
    <%= f.input :c13, collection: [ "Si", "No(leve)", "No(grave)", "No aplica"], label: 'Se realizo engrase equipo' %>
    <%= f.input :c14, collection: [ "Si", "No(leve)", "No(grave)", "No aplica"], label: 'Parabrisas en perfecto estado' %>
    <%= f.input :c15, collection: [ "Si", "No(leve)", "No(grave)", "No aplica"], label: 'El equipo cuenta con pertiga' %>
    <%= f.input :c16, collection: [ "Si", "No(leve)", "No(grave)", "No aplica"], label: 'Exintor operativo' %>
    <%= f.input :comentarios %>
  </div>
  </div>

  <div class="form-actions">

    <%= f.button :submit, "Enviar Checklist", class: "btn-primary" %>
  </div>
<% end %>
