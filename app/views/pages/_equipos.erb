<div class="card-deck">
<div class="card shadow">

<table id="" class="table table-striped table-bordered table-sm shadow" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Planta</th>
      <th>Checklist Mantenedor</th>
      <th>Checklist Operador</th>
      <th>Intervenciones</th>
    </tr>
  </thead>

  <tbody>
    <% @trucks.each do |truck| %>
      <tr>
      
          <td><a href="<%= trucks_path %>"><%= truck.codigo %></a></td> 
          <td><%= truck.planta %></td>
       
        <td>
        <a href="<%= checklists_path %>">
          <%= truck.checklist.last&.created_at&.strftime("%d-%m") %> / 
          <%= truck.checklist.last&.horometro %>
          </a>
        </td>
        <td>
        <a href="<%= equipos_path %>">
          <%= truck.equipo.last&.created_at&.strftime("%d-%m") %> / 
          <%= truck.equipo.last&.horometro %>
          <%= truck.equipo.last&.operador %>
          </a>
        </td>
        <td>
        <a href="<%= interventions_path %>">
          <%= truck.intervention.last&.created_at&.strftime("%d-%m") %> 
          <%= truck.intervention.last&.mecanico %> 
          </a>
        </td>
        
        
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>